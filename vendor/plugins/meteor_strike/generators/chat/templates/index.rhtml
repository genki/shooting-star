<%% form_remote_for(:chat, :url => {:action => 'talk'}) do |f| %>
  <%%= f.text_field :name %>
  <%%= submit_tag 'Talk' %><br />
  <%%= f.text_area :message, :rows => 3 %>
<%% end %>
<ul id="chat-list">
<%% for chat in @chats %>
